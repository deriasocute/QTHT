@model Sensor
<div class="modal fade over-flow-hidden" id="@(string.IsNullOrEmpty(Model.SensorType) ? "addSensor" : "editSensor-" + @Model.ID)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header title-form">
                @if (string.IsNullOrEmpty(Model.SensorType))
                {
                    <h4 class="modal-title white" id="">
                        Thêm mới cảm biến
                    </h4>
                }
                else
                {
                    <h4 class="modal-title white" id="">
                        Chỉnh sửa cảm biến
                    </h4>
                }
            </div>
            <div class="modal-body">
                <form asp-controller="Sensor" asp-action="@(string.IsNullOrEmpty(Model.SensorType) ? "Create" : "Edit")" method="post">
                    <div class="frame-one container-fluid p-4">
                        <div class="d-flex flex-column w-100">
                            
                            <div class="form-group row mb-10">
                                <label asp-for="DeviceID" class="control-label col-md-3"></label>
                                <div class="col-md-9">
                                    <input asp-for="DeviceID" class="form-control w-100" readonly placeholder="ID" value="@Model.DeviceID"/>
                                    <span asp-validation-for="DeviceID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row mb-10">
                                <label asp-for="SensorType" class="control-label col-md-3"></label>
                                <div class="col-md-9">
                                    <input asp-for="SensorType" class="form-control w-100" placeholder="Loại cảm biến" value="@Model.SensorType"/>
                                    <span asp-validation-for="SensorType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row mb-10 hidden">
                                <label asp-for="Created" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Created" class="form-control__edit form-control date" type="datetime" placeholder="Ngày tạo" value="@Model.Created"/>
                                    <span asp-validation-for="Created" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row mb-10 hidden">
                                <label asp-for="Updated" class="control-label col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Updated" class="form-control__edit form-control date" type="datetime" placeholder="Sửa lần cuối" value="@Model.Updated"/>
                                    <span asp-validation-for="Updated" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                <button type="submit" class="btn btn-primary" data-save="modal">Lưu</button>
            </div>
        </div>
    </div>
</div>