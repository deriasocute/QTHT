                    <img src="/img/logo.png" class="card-img-top w-25">
                    <h2 class="color-text text-tilte">HỆ THỐNG QUẢN TRỊ TRẠM BƠM</h2>
                    <p class="text-content">Ứng dụng IoT cho đời sống</p>
                </div>
                <div class="form-connect">
                    <div class="d-flex">
                        <i class="fa fa-map-marker-alt padding-icon"></i>
                        <p class="ms-4 text-connect">Thái Thịnh - Trung Liệt - quận Đống Đa - Hà Nội</p>
                    </div>
                    <div class="d-flex">
                        <i class="fa fa-phone padding-icon"></i>
                        <p class="ms-4 text-connect">Phone: 0123456789</p>
                    </div>
                    <div class="d-flex">
                        <i class="fa fa-envelope padding-icon"></i>
                        <p class="ms-4 text-connect">ducnguyen2928@gmail.com</p>
                    </div>
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 contain-form-login">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    
    <script src="/js/jquery-1.11.0.min.js"></script>
    <script src="/js/jquery-migrate-1.2.1.min.js"></script>
