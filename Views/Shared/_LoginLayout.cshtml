    <style type="text/css">
        body{
            background-image: linear-gradient(
          rgba(0, 0, 0, 0.6), 
          rgba(0, 0, 0, 0.6)
        ),url('/img/bg2.jpg');
        background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
        }
        .contain-form-login{
            background-color: rgba(204, 204, 204, 0.9);
            border-radius: 40px;
            width: 30%;
            position: absolute;
            right: 4%;
            height: 80vh;
            top: 50%;
            transform: translateY(-50%);
        }
        .form-login{
            width: 300px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -60%);
            color: #374151;
            z-index: 2;
        }
        .color-text{
            color: #2ac2d7;
        }
        .color-tilte{
            color: #fff;
        }
        .margin-tilte{
            margin-top: 75px;
        }
        .btn-login{
            margin-top: 40px;
            width: 100%;
            background-color: #2ac2d7;
            border-radius: 12px;
            height: 48px !important;
            font-size: 16px !important;
            border: none;
        }
        .btn-login:hover{
            background-color: #2ac2d7 !important;
        }
        .form-input{
            border: 1px solid #d1d5db;
            border-radius: 12px !important;
            height: 48px !important;
            line-height: 48px !important;
            font-size: 16px !important;
            padding-left: 18px;
            padding-right: 45px;
            box-shadow: none;
            width: 100%;
        }
        .icon-user:before { 
        font-family: 'Font Awesome 5 Free';
        content: "\f007";
        font-weight: 900;
        position: absolute;
        right: 35px;
        top: 10px;
        height: 24px;
        width: 24px;
        margin-left: .5em;
        width: 0;
        overflow: visible;
        display: inline-block;
        line-height: 24px;
        z-index: 1;
        color: #ccc;
    }
    .icon-lock:before { 
        font-family: 'Font Awesome 5 Free';
        content: "\f023";
        font-weight: 900;
        position: absolute;
        right: 35px;
        top: 10px;
        height: 24px;
        width: 24px;
        margin-left: .5em;
        width: 0;
        overflow: visible;
        display: inline-block;
        line-height: 24px;
        z-index: 1;
        color: #ccc;
    }

.icon-user { 
    position: relative;
}

.icon-lock { 
    position: relative;
}
.text-tilte{
    text-align: center;
    font-size: 30px;
}
.text-content{
    text-align: center;
    font-size: 20px !important;
    color: #fff;
}
.form-content{
    transform: translateY(-50%);
    left: 10%;
    position: absolute;
    top: 45%;
}
.logo-shop{
    position: absolute;
    height: 140px;
    width: 150px;
    top: -23%;
}
.text-connect{
    font-size: 14px;
    color: #fff;
}
.form-connect{
    color: #fff;
    position: absolute;
    bottom: 3%;
    left: 4%;
    max-width: 750px;
}
.padding-icon{
